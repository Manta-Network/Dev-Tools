{
  "compilerOptions": {
    "target": "ES2015",
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "sourceMap": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
